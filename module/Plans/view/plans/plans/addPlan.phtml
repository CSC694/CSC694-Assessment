// function to create department/unit options
function loadUnits(){
   
   // convert php array into javascript array
   var units = <?php print json_encode($units); ?>;
   // assign unit ids to html dropdown
   for (var i = 0; i < units.length; i++){
      $('#unit-menu').append('<option>' + units[i].id + '</option>');
   }

    // convert php array into javascript array
    var years = <?php print json_encode($years); ?>;
    // assign years to html dropdown
    for (var i = 0; i < years.length; i++){
      $('#year-menu').append('<option>' + years[i].year + '</option>');
    }
    
   // call code to initialize the selectpicker
   // this must come after the options are initalized
   $('.selectpicker').selectpicker();
   

}

// call loadPrograms when user chooses a department/unit
$(document).on('change', '#unit-menu', function () {
    loadPrograms($('#unit-menu option:selected').val());
});

// function to create program options based on department/unit chosen
function loadPrograms($unit){
   // clear selectorlist before adding program/degree options
   var oldSelections = $('#prog-menu option');
   for (var i = 0; i < oldSelections.length; i++){
      oldSelections.remove();
   }
   $('#prog-menu').selectpicker('refresh');
   
   // create url for redirect
   var urlform = "<?php echo $this->url('plans', array(
                                    'controller'=>'viewlist',
                                    'action'=>'viewlist',
                                    'action'=>'get')); ?>";
   urlform = urlform + '/' + $unit;
   
   // asynchronous ajax code to populate program/degree selector
   $.ajax({
      url: urlform,
      type: "GET",
      dataType: "json",
      error : function(xhr, status, error) {
         console.log("ERROR: ", xhr, xhr.status, xhr.getAllResponseHeaders());
      },
      success: function(programsJson){
         for (var i = 0; i < programsJson.length; i++){
            $('#prog-menu').append('<option>' + programsJson[i].name + '</option>');
         }
         $('#prog-menu').selectpicker('refresh');
      },
   });
}
</script>

